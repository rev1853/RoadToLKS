<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ImageView">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="237dp"
        android:layout_height="209dp"
        android:layout_marginTop="84dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/crow" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="231dp"
        android:layout_height="252dp"
        android:textSize="20dp"
        android:text="Lorem ipsum atau ringkasanya lipsum, adalah teks standar yang ditempatkan untuk mendemonstrasikan elemen grafis atau visual seperti font, tipografi, dan tata letak"
        app:layout_constraintEnd_toEndOf="@+id/imageView"
        app:layout_constraintStart_toStartOf="@+id/imageView"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />
</androidx.constraintlayout.widget.ConstraintLayout>